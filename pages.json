{
	"pages": [
		//pages数组中第一项表示应用启动页
		{
			"path": "pages/tabbar/home/home",
			"style": {
				"app-plus": {
					"titleNView": {
						"type": "transparent" //透明渐变导航栏
					}
				}
			}
		},
		{
			"path": "pages/tabbar/search/search",
			"style": {
				"navigationBarTitleText": "导航栏带搜索框",
				"app-plus": {
					"bounce": "none",
					"titleNView": {
						//"type": "transparent",
						"titleColor": "#FFFFFF",
						"backgroundColor": "#007AFF",
						"buttons": [{
							"text": "全部",
							"type": "none",
							"float": "left",
							"fontSrc": "/static/uni.ttf",
							"fontSize": "14px",
							"width": "auto",
							"select": true,
							"color": "#FFFFFF",
							"background": "rgba(0,0,0,0)"
						}],
						"searchInput": {
							"backgroundColor": "#FFFFFF",
							"borderRadius": "6px",
							"placeholder": "请输入指标关键词",
							"autoFocus": true
						}
					}
				}
			}
		},
		{
			"path": "pages/tabbar/mine/mine",
			"style": {}
		},
		{
			"path": "pages/analysis/list",
			"style": {
				"navigationBarBackgroundColor": "#3A82CC",
				"navigationBarTitleText": "经济分析"
			}
		},
		{
			"path": "pages/analysis/detail",
			"style": {
				"navigationBarBackgroundColor": "#3A82CC",
				"navigationBarTitleText": "具体指标页",
				"app-plus": {
					"titleNView": {
						"buttons": [{
								"type": "share"
							},
							{
								"type": "favorite"
							}
						]
					}
				}
			}
		},
		{
			"path": "pages/topic/list",
			"style": {
				"navigationBarBackgroundColor": "#3A82CC",
				"navigationBarTitleText": "专题列表"
			}
		},
		{
			"path": "pages/analysis/demo",
			"style": {}
		}
	],
	// 设置应用的状态栏、导航条、标题、窗口背景色
	"globalStyle": {
		"navigationStyle": "default",
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "数说武汉",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	// 设置tab栏的各项属性
	"tabBar": {
		"color": "#7A7E83", // 文字默认颜色
		"selectedColor": "#1A82D2", // tab上的文字选中时的颜色
		"borderStyle": "black", // tabbar上边框的颜色，仅支持 black/white
		"backgroundColor": "#FFFFFF", // tab的背景色
		"list": [{
				"pagePath": "pages/tabbar/home/home",
				"iconPath": "static/icon/tabbar/home-orgin.png",
				"selectedIconPath": "static/icon/tabbar/home-active.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/tabbar/search/search",
				"iconPath": "static/icon/tabbar/search-orgin.png",
				"selectedIconPath": "static/icon/tabbar/search-active.png",
				"text": "搜索"
			},
			{
				"pagePath": "pages/tabbar/mine/mine",
				"iconPath": "static/icon/tabbar/mine-orgin.png",
				"selectedIconPath": "static/icon/tabbar/mine-active.png",
				"text": "我的"
			}
		]
	},
	"condition": {
		//模式配置，仅开发期间生效
		"current": 3, //当前激活的模式(list 的索引项)
		"list": [{
				"name": "home",
				"path": "pages/tabbar/home/home",
				"query": ""
			},
			{
				"name": "search",
				"path": "pages/tabbar/search/search",
				"query": ""
			},
			{
				"name": "list",
				"path": "pages/analysis/list",
				"query": ""
			},
			{
				"name": "detail", //模式名称
				"path": "pages/analysis/detail", //启动页面，必选
				"query": "indexId=1001&indexName=GDP" //启动参数，在页面的onLoad函数里面得到
			},
			{
				"name": "demo", //模式名称
				"path": "pages/analysis/demo", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			}
		]
	}
}
